#!/bin/sh
USERNAME=SOMENAME
PASSWORD=SOMEPASSWORD
HOST=SOME.HO.ST
PORT=1543
SERVICE_NAME=YOUNAMEIT

alternative() {
USERNAME=ANAME
PASSWORD=APASSWORD
HOST=AN.OTHER.HO.ST
PORT=1521
SERVICE_NAME=ANOTHERNAME
}

if [ "x$1" = "xalternative" ]; then
	alternative
fi

rlwrap sqlplus $USERNAME/$PASSWORD@"(DESCRIPTION=(ADDRESS=(PROTOCOL=TCP)(HOST=$HOST)(PORT=$PORT))(CONNECT_DATA=(SERVICE_NAME=$SERVICE_NAME)))"
